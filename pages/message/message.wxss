/* pages/message/message.wxss */
.head{
  padding:10rpx 0 0 10rpx;
  border-bottom: 1rpx solid #888;
}
.head-name{
  display: inline-block;
  padding:10rpx 0;
  font-size: 40rpx;
}
.head-remind{
  display: inline-block;
  font-size: 30rpx;
  color: #888;
  margin: 10rpx 0 0 40rpx;
}
.head-horizon{
  width:40rpx;
  height:8rpx;
  background-color: #f18a9b;
  margin-left:20rpx;
}
.remind-blank{
  text-align: center;
  margin-top:50rpx;
}
.remind-blank-image{
  width:40%;
}
.remind-blank-text{
  font-size: 30rpx;
}
.bottom{
  position: fixed;
  bottom:0;
  width:100%;
  padding:30rpx;
  background-color: #eee;
}
.bottom-item{
  margin-bottom:20rpx;
}
.bottom-item-image{
  width:80rpx;
  height:80rpx;
  display: inline-block
}
.bottom-item-desc{
  display: inline-block;
  margin: 0 0 0 30rpx;
}
.bottom-item-desc-little{
  font-size: 26rpx;
  color: #666;
}
.bottom-item-desc-big{
  font-size:30rpx;
}