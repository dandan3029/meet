/* pages/selfCenter/selfCenter.wxss */
.selfCard{
  width:94%;
  margin:0 3%;
}
swiper{
  width:100%;
  height:800rpx;
  background-color: #ddd;
}
swiper image{
  display: block;
  width:100%;
  height:100%;
}
.selfInfo{
  margin-top:10rpx;
}
.selfInfo-name{
  font-size:50rpx;
}
.selfInfo-city{
  font-size: 26rpx;
  float: right;
  color: #888;
  margin-top:24rpx;
}
.selfInfo-detail{
  padding:0;
}
.selfInfo-detail-item{
  font-size: 26rpx;
  font-family: "微软雅黑";
  color: #888;
  display: inline-block;
  padding:5rpx 20rpx;
}
.selfInfo-detail-vertical{
  display: inline-block;
  margin-top:0rpx;
  margin-bottom: 0rpx;
  width:4rpx;
  height:26rpx;
  background-color: #888;
}
.self-desc{

}
.self-desc-item{
  margin:40rpx 0;
}
.self-desc-item-head{
  margin:20rpx 0;
  padding:0 20rpx;
  border-left: 6rpx solid #f18a9b;
}
.self-desc-item-body{
  font-size:32rpx;
  color:#888;
  letter-spacing:4rpx;
}